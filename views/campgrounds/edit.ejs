<% layout('layouts/boilerplate') %>
    <h1>Edit Campground</h1>
    <form action="/campgrounds/<%=campground.id%>?_method=PUT" method="post">
        <div><label for="title">Title</label>
        <input type="text" name="campground[title]" id="title" value="<%= campground.title %>"></div>
        
        <div><label for="location">Location</label>
        <input type="text" name="campground[location]" id="location" value="<%=campground.location %>"></div>
        
        <button>Edit Campground</button><br>
        <a href="/campgrounds">Show Campground</a>
    </form>
